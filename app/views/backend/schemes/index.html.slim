.page-header
  h2
    =' schemes_index_title
    small= "(#{schemes.count})"
    .height-half
    .pull-right
      = link_to "New scheme",
                [:new, :backend, :scheme],
                class: "btn btn-sm btn-primary",
                id: "btn_new",
                data: { action: "new" }

- if schemes.any?
  table.table.table-bordered.table-striped.table-hover.schemes-table
    thead
      tr
        th
        th Name
        th
    tbody
      - schemes.decorate.each do |scheme|
        = render scheme
