.container
  .page-header
    h2
      strong Scheme:
      '
      = feedback.scheme_link

      span.pull-right
        = link_to "Edit",
                  [:edit, feedback],
                  class: "btn btn-primary",
                  data: { action: "edit" }
  .form-horizontal
    p.clearfix
      strong.col-sm-2.text-right Approved:
      span.col-sm-9 = feedback.approved_icon

    p.clearfix
      strong.col-sm-2.text-right Score:
      span.col-sm-9
        span.star-ratings
          - (0..4).each do |star|
            span.star-rating class="#{'active' if star < feedback.score}"

    p.clearfix
      strong.col-sm-2.text-right Description:
      span.col-sm-9 = simple_format feedback.description

  br
  br
  = link_to 'Back to feedback',
            feedbacks_path,
            class: "btn btn-link"
  | &nbsp;
  = link_to 'Back to unapproved feedback',
            [:unapproved, :feedbacks],
            class: "btn btn-link"
